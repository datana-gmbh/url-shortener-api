{
    "name": "datana-gmbh/url-shortener-api",
    "description": "API for UrlShortener",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Oskar Stark",
            "email": "oskarstark@googlemail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "oskarstark/trimmed-non-empty-string": "^1.0",
        "psr/log": "^2.0 || ^3.0",
        "symfony/http-client": "^6.2.9",
        "thecodingmachine/safe": "^2.5",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.30.2",
        "ergebnis/php-cs-fixer-config": "^5.5",
        "ergebnis/test-util": "^1.6",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10.14",
        "phpstan/phpstan-webmozart-assert": "^1.2.4",
        "phpunit/phpunit": "^9.6.7",
        "thecodingmachine/phpstan-safe-rule": "^1.2"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Datana\\UrlShortener\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Datana\\UrlShortener\\Api\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "cs": [
            "vendor/bin/php-cs-fixer fix"
        ],
        "cs-check": [
            "vendor/bin/php-cs-fixer fix --diff --diff-format=udiff --dry-run --verbose"
        ],
        "phpstan": [
            "@php -d memory_limit=-1 vendor/bin/phpstan analyse --configuration phpstan.neon --no-progress"
        ],
        "phpstan-baseline": [
            "@php -d memory_limit=-1 vendor/bin/phpstan analyse --configuration phpstan.neon --generate-baseline=phpstan-baseline.neon --no-progress"
        ],
        "test": [
            "@php -d memory_limit=-1 vendor/bin/phpunit"
        ]
    }
}
